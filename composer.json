{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "eldelassombras/errors-renovated": "^1.0",
        "jeroennoten/laravel-adminlte": "^3.15.2",
        "laravel-lang/common": "^6.7.1",
        "laravel/framework": "^12.31.1",
        "laravel/tinker": "^2.10.1",
        "laravel/ui": "^4.6.1",
        "laravolt/avatar": "^6.3.1",
        "livewire/livewire": "^3.6.4",
        "spatie/laravel-permission": "^6.21"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.16.0",
        "barryvdh/laravel-ide-helper": "^3.6.0",
        "beyondcode/laravel-er-diagram-generator": "^5.0",
        "fakerphp/faker": "^1.24.1",
        "friendsofphp/php-cs-fixer": "^3.87.2",
        "laravel/pail": "^1.2.3",
        "laravel/pint": "^1.25.1",
        "laravel/sail": "^1.46.0",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.2",
        "phpunit/phpunit": "^11.5.40",
        "squizlabs/php_codesniffer": "^3.13.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "php artisan ide-helper:models -RW",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"npm run dev\" --names='server,queue,vite'"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "laravelpint": [
            "./vendor/bin/pint --preset psr12 --config=./.vscode/pint.json"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
